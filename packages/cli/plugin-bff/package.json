{
  "name": "@modern-js/plugin-bff",
  "description": "The meta-framework suite designed from scratch for frontend-focused modern web development.",
  "homepage": "https://modernjs.dev",
  "bugs": "https://github.com/modern-js-dev/modern.js/issues",
  "repository": "modern-js-dev/modern.js",
  "license": "MIT",
  "keywords": [
    "react",
    "framework",
    "modern",
    "modern.js"
  ],
  "version": "1.0.0",
  "jsnext:source": "./src/index.ts",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/js/node/index.js",
  "module": "./dist/js/treeshaking/index.js",
  "jsnext:modern": "./dist/js/modern/index.js",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/js/modern/index.js",
        "require": "./dist/js/node/index.js"
      },
      "default": "./dist/js/treeshaking/index.js"
    },
    "./cli": "./dist/js/node/cli.js",
    "./server": "./dist/js/node/server.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types/index.d.ts"
      ],
      "cli": [
        "./dist/types/cli.d.ts"
      ],
      "server": [
        "./dist/types/server.d.ts"
      ]
    }
  },
  "scripts": {
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm build -- --platform",
    "new": "modern new",
    "build": "modern build",
    "dev": "modern build --watch",
    "test": "modern test"
  },
  "dependencies": {
    "@babel/core": "^7.15.5",
    "@babel/runtime": "^7",
    "@modern-js/babel-chain": "workspace:^1.0.0",
    "@modern-js/babel-compiler": "workspace:^1.0.0",
    "@modern-js/babel-preset-lib": "workspace:^1.0.0",
    "@modern-js/create-request": "workspace:^1.0.0",
    "@modern-js/server-utils": "workspace:^1.0.0",
    "@modern-js/utils": "workspace:^1.0.0",
    "fs-extra": "^10.0.0",
    "loader-utils": "^2.0.0"
  },
  "devDependencies": {
    "@modern-js/bff-utils": "workspace:^1.0.0",
    "@modern-js/core": "workspace:^1.0.0",
    "@modern-js/module-tools": "^1.0.0",
    "@modern-js/plugin-analyze": "workspace:^1.0.0",
    "@modern-js/plugin-testing": "^1.0.0",
    "@modern-js/runtime": "workspace:^1.0.0",
    "@modern-js/server-plugin": "workspace:^1.0.0",
    "@modern-js/types": "workspace:^1.0.0",
    "@types/babel__core": "^7.1.15",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^26",
    "@types/loader-utils": "^2.0.3",
    "@types/node": "^14",
    "memfs": "^3.3.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4",
    "webpack": "^5.54.0",
    "webpack-chain": "^6.5.1"
  },
  "peerDependencies": {
    "@modern-js/bff-utils": "workspace:^1.0.0",
    "@modern-js/core": "workspace:^1.0.0",
    "@modern-js/server-plugin": "workspace:^1.0.0"
  },
  "modernConfig": {
    "output": {
      "packageMode": "node-js"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
